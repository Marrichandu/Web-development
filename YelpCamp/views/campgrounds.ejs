<%- include("partials/header") %>
<div class="container">
    <header class='jumbotron'>
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked from all over the word</p>
            <p>    <a class='btn btn-primary btn-lg' href="/campgrounds/new">Add new Campground</a>
            </p>    
        </div>
    </header>
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-3">
                <div class="card m-3">
                    <img class=".img-thumbnail card-img-top" src="<%= campground.image %>" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                    </div>
                  </div>
            </div>
            <% }) %>
    </div>
</div>
<%- include("partials/footer") %>
